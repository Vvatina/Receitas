<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_form_card"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/bg_recipe_detail"
        android:elevation="4dp">

        <!-- Imagem principal da receita -->
        <ImageView
            android:id="@+id/imgMainRecipe"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagem da receita"
            android:visibility="gone"
            android:background="#EEEEEE" />

        <!-- Nome da receita -->
        <TextView
            android:id="@+id/tvRecipeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome da Receita"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4B0082"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Tipo da receita -->
        <TextView
            android:id="@+id/tvRecipeType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo: Sobremesa"
            android:textSize="16sp"
            android:textColor="#777777"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Ingredientes título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textColor="#6A1B9A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Ingredientes -->
        <TextView
            android:id="@+id/tvRecipeIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 ovos\n2 xícaras de farinha de trigo\n1 xícara de açúcar"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="20dp" />

        <!-- Modo de preparo título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo de Preparo"
            android:textColor="#6A1B9A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Container para passos (dinâmico) -->
        <LinearLayout
            android:id="@+id/layoutStepsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp" />

    </LinearLayout>
</ScrollView>
